@model CourseProject.Models.ViewModels.CategoryCreateViewModel


<h1 style="margin-top: 200px">Add</h1>

<div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control"/>
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" style="width: 100%" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
    <div class="col-md-8"></div>
</div>

<div>
    <a asp-controller="User" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}