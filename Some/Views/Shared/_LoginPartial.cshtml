@using Microsoft.AspNetCore.Identity
@using CourseProject.Identity.Models
@using CourseProject.Models.DataModels
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">

            <a class="text-light" asp-controller="User" asp-action="Index" title="Manage">Account</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Product", new { area = "" })">
                <button type="submit" class=" btn btn-link text-light">Exit</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="text-light" asp-controller="User" asp-action="Register">SignUp</a>
        </li>
        <li class="nav-item">
            <a class="text-light" asp-controller="User" asp-action="Login">Sign In</a>
        </li>
    }
</ul>
