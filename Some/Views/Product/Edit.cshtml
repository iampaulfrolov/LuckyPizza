@model CourseProject.Models.ViewModels.ProductUpdateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Edit">
            <input asp-for="Product.Id" type="hidden"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Product.Category.Id" hidden/>
            <input asp-for="Product.Image" hidden/>
            <div class="form-group">
                <label asp-for="Product.Title" class="control-label"></label>
                <input asp-for="Product.Title" class="form-control"/>
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <textarea asp-for="Product.Description" class="form-control"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control"/>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="form-select" asp-for="Product.Category.Id"
                        asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                    <option>@Model.Product.Category.Name</option>
                </select>
            </div>
            <div class="form-group">
                <input type="file" asp-for="Image" class="form-control-file"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}